#include<iostream>
using namespace std;
class complex
{
    float real;
    float imag;
    public:
    complex()
    {
        real=0;
        imag=0;
    }
    friend istream & operator>>(istream & input,complex &t)
    {
        cout<<"enter the real part : ";
        input>>t.real;
        cout<<"enter the imaginary part : ";
        input>>t.imag;
    }
    friend ostream & operator<<(ostream & output,complex &t)
    {
        output<<t.real<<" + "<<t.imag<<"i";
    }
    complex operator+(complex);
    complex operator*(complex);
};
complex complex :: operator+(complex c)
{
    complex temp;
    temp.real=real+c.real;
    temp.imag=imag+c.imag;
    return temp;
}
complex complex :: operator*(complex c)
{
    complex temp;
    temp.real=(real*c.real)-(imag*c.imag);
    temp.imag=(imag*c.imag)+(real*c.imag);
    return temp;
}

int main()
{
    complex c1,c2,c3,c4;
    cout<<"enter the first number  :"<<endl;
    cin>>c1;
    cout<<"enter the second number :"<<endl;
    cin>>c2;
    c3=c1+c2;
    c4=c1*c2;
    cout<<"first number is : "<<c1<<endl;
    cout<<"second number is : "<<c2<<endl;
    cout<<"addition of two complex number is : "<<c3<<endl;
    cout<<"multiplication of two complex number is  : "<<c4<<endl;
}
